<div class="portfolio-single container">
		
	<div class="row">
	
		<!-- InstanceBeginEditable name="Content" -->
		
		
		<!-- TITLE - column 8/12 -->
		<div class="span8 portfolio-field portfolio-title">
			<h2><%=@data[:competition].name%></h2>
		</div>
		<!-- TITLE - column 8/12 -->
		
		
		<!-- PORTFOLIO-NAV - column 4/12 -->
		<div class="span4 portfolio-field portfolio-nav">
			<a class="icon button prev ajax" href="portfolio-item-03.html" title="Summary">"</a>
			<a class="icon button prev ajax race_results" href="#/competitions/results/<%=@data[:competition].id%>" title="Race Results" style="<%=(@data[:is_participant])?'':'display:none;'%>">x</a>
			<a class="icon button prev ajax" href="portfolio-item-03.html" title="Leaderboard">K</a>
			<a class="icon button back" href="#/competitions" title="Close">Â</a>
		</div>
		<!-- PORTFOLIO-NAV - column 4/12 -->
		
		
		<!-- PORTFOLIO-IMAGES - column 8/12 -->
		<div class="span8 portfolio-field">
			<img src="<%=@data[:competition].image_url%>" alt="<%=@data[:competition].name%>">
		</div>
		<!-- PORTFOLIO-IMAGES - column 8/12 -->
		
		
		<!-- PORTFOLIO SIDEBAR - column 4/12 -->
		<div class="span4 portfolio-field">
			
			<h3>Description</h3>
			<p><%=@data[:competition].description%></p>
			
			<h3>Creator</h3>
			<p><%=(@data[:creator].firstname+' '+@data[:creator].lastname).strip%></p>
			
			<h3>Technology</h3>
			<ul class="tags">
				<li><a>HTML 5</a></li>
				<li><a>CSS 3</a></li>
				<li><a>jQuery</a></li>
				<li><a>Responsive Design</a></li>
			</ul>
			
			<div class="launch">
				<% if (@user.nil?) %>
					<a href="#" class="btn">SIGN IN TO PARTICIPATE</a>
				<% elseif (@data[:is_participant]) %>
					<a href="#" class="btn">TIP</a>
				<% else %>
					<a href="#" class="btn" onclick="join_competition('<%=@data[:competition].id%>', event);">JOIN COMPETITION</a>
				<% end %>
			</div>
			
		</div>
		<!-- PORTFOLIO SIDEBAR - column 4/12 -->
			
		<!-- InstanceEndEditable -->
		
	</div>
	
</div>