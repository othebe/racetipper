<div class="main-text-holder" style="width:90%;">
	
	<% if (@races.length > 0) %>
		<span>Choose a race:</span>
		<select id="default_rider_races" onchange="show_default_riders(this, <%=@data[:competition].id%>);" style="display:block;">
			<% @races.each do |race| %>
				<option value="<%=race.id%>"><%=race.name%></option>
			<% end %>
		</select>
		
		<div class="custom-separator" style="margin-bottom:15px;"></div>
		
		<%=image_tag 'ajax-loader.gif', {:onload=>'show_default_riders(this, '+@data[:competition].id.to_s+');', :class=>'loading'} %>
		
		<div id="default_rider_data"></div>
	<% end %>
</div>