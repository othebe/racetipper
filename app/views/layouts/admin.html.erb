<%=csrf_meta_tag%><script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script><div class="header">	<div class="home">		<a href="/admin/dashboard">			<img src="/assets/admin/home.png">			<span>Racetipper Admin Panel</span>		</a>				<% if (!@title.empty?) %>			<span style="margin-left:5px; margin-right:5px;"> > </span>			<a href="#">				<span><%=@title%></span>			</a>		<% end %>	</div>	<div class="season_selector">		<label>Season:</label>			<select onchange="change_season(this.value);">				<option>Select a season</option>				<% if (@seasons.empty?) %>					<option value="new">Create a new season</option>				<% else %>					<% @seasons.each do |season| %>						<option value="<%=season.id%>"><%=season.year%></option>					<% end %>				<% end %>			</select>	</div></div><div style="clear:both;"></div><hr/><%= yield %><script>$(document).ready(function() {	$("body").bind("ajaxSend", function(elm, xhr, s){		if (s.type == "POST") {		  xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));		}	});});function change_season(value) {	if (value=='new') {		window.location.href = '/admin/edit_season';	} else {		window.location.href = '/admin/edit_season/'+value;	}}</script><style>a {	color: blue;}div.home {	float: left;}	div.home a {		text-decoration: none;	}	div.home img {		height: 17px;		float: left;		margin-right: 10px;	}	div.home span {		font-style: italic;		color: purple;		float: left;		font-weight: bold;	}div.season_selector {	float: right;}</style>