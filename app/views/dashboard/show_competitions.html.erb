<% if (!@user.nil?) %>
	<!-- New competition -->
	<div class="item mine new_competition">
		<div class="media-box">
			<img src="/assets/new_competition.jpg" alt="New Competition" style="height:140px; width:210px;">
			<div class="mask">
				<h3 class="title" style="margin-top:18%;">CREATE A COMPETITION</h3>
				<a href="#/competitions/edit" class="ico show-details new_competition"></a>
			</div>
		</div>
		<h3 class="project-title">Create a new competition</h3>
	</div>
<% end %>

<% @competitions.each do |data| %>
	<div class="item <%=(data[:is_participant])?'mine':''%>">
		<div class="media-box">
			<img src="<%=(data[:competition].image_url.nil?)?DEFAULT[:COMPETITION_IMG]:data[:competition].image_url%>" alt="<%=data[:competition].name%>" style="height:140px; width:210px;">
			<div class="mask">
				<h3 class="title" style="margin-top:10%;">SEE COMPETITION DETAILS</h3>
				<a data_id="1" href="#/competitions/show/<%=data[:competition].id%>" class="ico show-details"></a>
			</div>
		</div>
		<h3 class="project-title"><%=data[:competition].name%></h3>
		<% if (!data[:competition].is_complete) %>
			<p class="category">In Progress</p>
		<% else %>
			<p class="category">Completed</p>
		<% end %>
	</div>
<% end %>

