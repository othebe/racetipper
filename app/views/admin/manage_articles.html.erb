<div style="margin-bottom:15px;">
	<a href="#" onclick="edit_article(null);">+ Add new article</a>
</div>

<% if (!@articles.empty?) %>
	<table class="articles">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th></th>
		</tr>
		
		<%@articles.each do |article| %>
			<tr>
				<td><%=article.id%></td>
				<td><%=article.title%></td>
				<td>
					<a href="#" onclick="edit_article('<%=article.id%>')">Edit</a>
					<a href="#">Remove</a>
				</td>
			</tr>
		<% end %>
	</table>
<% end %>

<script>
function edit_article(id) {
	if (id==null)
		window.open('/admin/edit_article', 'Add article', 'height=610,width=600');
	else window.open('/admin/edit_article/'+id, 'Edit article', 'height=610,width=600');
}
</script>

<style>
.articles {
	border: 1px solid #C3C3C3;
	border-collapse: collapse;
}
	.articles th,
	.articles td {
		border: 1px solid #C3C3C3;
	}
</style>