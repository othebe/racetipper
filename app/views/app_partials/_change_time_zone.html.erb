<script>
$(document).ready(function(event) {
	$('.time_zone_selector').click(function(event) {
		$(this).hide();
		$(this).parent().find('select').show();
		
		event.preventDefault();
	});
});

function change_time_zone(elt) {
	time_zone = $(elt).val();
	if (time_zone.length > 0) {
		$.post('/users/change_time_zone', {time_zone:time_zone}, function(response) {
			if (response.success)
				document.location.reload();
			else
				alert(response.msg);
		});
	}
}
</script>