<%= render 'users/partials/forgot_password' %>
<div class="login-page">
	<div class="overlay">
		<div class="row hide-for-medium-up">
			<div class="small-12 columns">
				<div class="row">
					<div class="col right">
						<div class="field-name">
							<div class="bold">Email</div>
							<div class="bold">Password</div>
						</div>
						
						<div class="field-value">
							<input type="text" name="email" >
							<input type="password" name="password" name="password">
						</div>
						<div class="btn yellow login-button" onclick="login(this);">Sign In</div>
					</div>
					
				</div>
				
				<div class="row" style="margin-bottom: 15px;">
					<div class="small-6 columns">
						<input type="checkbox" id="keep-logged-in"><label for="keep-logged-in" class="italic">&nbsp; Keep me logged in</label>
					</div>
					<div class="small-6 columns">
						<a class="forgot-password-fancybox" href="#forgot-password" class="italic" style="color:white;">Forgot password?</a>
					</div>
				</div>
				<div class="row">
					<div class="small-12 columns">
						<div class="text-center">
							<a href="#" onclick="facebook_login()"><%=image_tag 'facebook.jpg', {:style=>'margin-top:5px;'}%></a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="large-6 columns hide-for-small">
				<div class="col left">
					<div class="title-1 bold">WELCOME TO VELOTIPPER</div>
					<div class="title-2">
						PICK A RACE</br>
						TIP A RIDER</br>
						BEAT YOUR MATES
					</div>
					<div class="btn yellow" style="margin-top:20px;">Learn more</div>
				</div>
			</div>
			<div class="large-6 small-12 columns">
				<div class="col right">
					<div class="title-1 bold" style="margin-bottom:20px;">Join <span class="italic">velotipper</span> today</div>
					<div class="field-name">
						<div class="bold">First name</div>
						<div class="bold">Last name</div>
						<div class="bold">Email</div>
						<div class="bold">Password</div>
					</div>
					
					<div class="field-value">
						<input type="text" name="firstname">
						<input type="text" name="lastname">
						<input type="text" name="email">
						<input type="password" name="password">
					</div>
					
					<div style="clear:both;"></div>
					
					<div class="submit" style="margin-top:20px;">
						<div class="btn yellow" style="margin-right: 10px;" onclick="signup(this);">Sign Up</div>
						<div class="tnc italic">By creating an account, I accept biketippr <span class="bold">Terms of Service</span> and <span class="bold">Privacy Policy.</span></div> 
						<div style="clear:both;"></div>
					</div>
				</div>
			</div>
		</div>
		
		
	</div>
</div>

