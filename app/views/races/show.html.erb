<div class="portfolio-single container">
	<div class="row">
		<!-- TITLE - column 8/12 -->
		<div class="span8 portfolio-field portfolio-title">
			<h2><%=@race.name%></h2>
		</div>
		<!-- TITLE - column 8/12 -->
		
		
		<!-- PORTFOLIO-NAV - column 4/12 -->
		<div class="span4 portfolio-field portfolio-nav">
			<a class="icon button ajax" href="#/races/show/<%=@race.id%>" onclick="return false;" title="Races">5</a>
			<a class="icon button ajax" href="/#" title="Riders">K</a>
			<a class="icon button back" href="/#/home" title="Close">Â</a>
		</div>
		<!-- PORTFOLIO-NAV - column 4/12 -->
		
		<div class="span7 portfolio-field">
			<% if (!@results.empty?) %>
				<h3>Season points</h3>
				<table class="leaderboard_table">
					<thead>
						<tr>
							<th align="left">Rank</th>
							<th align="left">Name</th>
							<th align="left">Time</th>
							<th align="left">Points</th>
							<th align="left">KOM</th>
							<th align="left">Sprint</th>
						</tr>
					</thead>
					
					<tbody>
						<% ndx = 1 %>
						<% @results.each do |rider_id, result| %>
							<tr>
								<th align="left"><%=ndx%></th>
								<th align="left"><%=result[:rider_name]%></th>
								<th align="left"><%=result[:time]%></th>
								<th align="left"><%=result[:points]%></th>
								<th align="left"><%=result[:kom_points]%></th>
								<th align="left"><%=result[:sprint_points]%></th>
							</tr>
							<% ndx += 1 %>
						<% end %>
					</tbody>
				</table>
			<% end %>
		</div>
		
		<div class="span5 portfolio-field">
			<h3>Stages</h3>
			<div id="portfolio-items" class="portfolio-items stage_data_container" style="position: relative; overflow: hidden; height: auto;">
			<% @stages.each do |stage| %>				
				<div class="item" style="width:140px;">
					<div class="media-box">
						<img src="<%=stage.image_url%>" alt="<%=stage.name%>" style="width:140px; height:100px;">
						<div class="mask" race_id="<%=stage.id%>">
							<h3 class="title" style="margin-top:12%;">View Details</h3>
							<a href="/#/stages/<%=stage.id%>" class="ico show-details supress" onclick=""></a>
						</div>
					</div>
					<h3 class="project-title" style="margin-top:-40px;"><%=stage.name%></h3>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>